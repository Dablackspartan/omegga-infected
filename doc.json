{
  "name": "Infected / Zombies (Omegga)",
  "description": "Infected (Zombies) minigame scaffold. Auto-binds to 'Infected'.",
  "author": "chatgpt-dev-assist",
  "config": {
    "authorized-users": {
      "description": "Admins allowed to use admin commands",
      "type": "list",
      "default": []
    },
    "round-seconds": {
      "description": "Round length (sec)",
      "type": "number",
      "default": 300
    },
    "survivor-weapon": {
      "description": "Survivor firearm (item name)",
      "type": "string",
      "default": ""
    },
    "infected-knife": {
      "description": "Infected melee (item name)",
      "type": "string",
      "default": ""
    },
    "bonus-weapon": {
      "description": "First-infected bonus (item name)",
      "type": "string",
      "default": ""
    },
    "team-color-enabled": {
      "description": "Use team tint",
      "type": "boolean",
      "default": true
    },
    "green-tint-enabled": {
      "description": "Tint infected green",
      "type": "boolean",
      "default": true
    },
    "green-tint-amount": {
      "description": "Tint amount 0..1",
      "type": "number",
      "default": 0.35
    },
    "enable-sounds": {
      "description": "Play sounds on events",
      "type": "boolean",
      "default": false
    },
    "sound-become-zombie": {
      "description": "Sound on infection",
      "type": "string",
      "default": ""
    },
    "sound-spawn-survivor": {
      "description": "Sound on survivor spawn",
      "type": "string",
      "default": ""
    },
    "sound-spawn-zombie": {
      "description": "Sound on zombie spawn",
      "type": "string",
      "default": ""
    },
    "minigame-template": {
      "description": "Preset .bp to import (leave default)",
      "type": "string",
      "default": "plugins/infected/data/Infected.bp"
    },
    "start-on-create": {
      "description": "Start round immediately after create",
      "type": "boolean",
      "default": false
    },
    "enable-kill-tracking": {
      "description": "Parse killfeed (experimental)",
      "type": "boolean",
      "default": false
    }
  },
  "commands": [
    {
      "name": "!infected createminigame",
      "description": "Create/bind minigame from preset"
    },
    {
      "name": "!infected status",
      "description": "Show plugin status"
    },
    {
      "name": "!infected startround",
      "description": "Force start (admin)"
    },
    {
      "name": "!infected endround",
      "description": "Force end (admin)"
    }
  ]
}