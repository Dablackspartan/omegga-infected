{
  "name": "Infected / Zombies (Omegga)",
  "description": "Infected round gamemode scaffold with JSON-based minigame creation.",
  "author": "Dablackspartan + patch",
  "config": {
    "authorized-users": {
      "description": "Admins allowed to use admin-only commands.",
      "default": [],
      "type": "array"
    },
    "round-seconds": {
      "description": "Round duration in seconds.",
      "default": 300,
      "type": "number"
    },
    "survivor-weapon": {
      "description": "Item name for survivor firearm.",
      "default": "",
      "type": "string"
    },
    "infected-knife": {
      "description": "Item name for infected knife.",
      "default": "",
      "type": "string"
    },
    "bonus-weapon": {
      "description": "Item name for first-infected temporary bonus.",
      "default": "",
      "type": "string"
    },
    "team-color-enabled": {
      "description": "Enable infected team tint.",
      "default": false,
      "type": "boolean"
    },
    "green-tint-enabled": {
      "description": "Enable infected green tint.",
      "default": false,
      "type": "boolean"
    },
    "green-tint-amount": {
      "description": "Amount of green tint (0..1).",
      "default": 0.4,
      "type": "number"
    },
    "enable-sounds": {
      "description": "Toggle role-change sounds.",
      "default": false,
      "type": "boolean"
    },
    "sound-zombie": {
      "description": "Sound asset ref for infected spawn/convert.",
      "default": "",
      "type": "string"
    },
    "sound-survivor": {
      "description": "Sound asset ref for survivor spawn.",
      "default": "",
      "type": "string"
    },
    "enable-kill-tracking": {
      "description": "Enable basic kill tracking (experimental).",
      "default": false,
      "type": "boolean"
    },
    "minigame-template": {
      "description": "Path (relative to plugin folder) to the JSON minigame template.",
      "default": "data/Infected.json",
      "type": "string"
    },
    "minigame-name": {
      "description": "Name to give the minigame/preset (overrides rulesetName inside JSON).",
      "default": "Infected",
      "type": "string"
    },
    "start-on-create": {
      "description": "Auto-start after !infected createminigame.",
      "default": false,
      "type": "boolean"
    }
  },
  "commands": [
    {
      "name": "!infected createminigame",
      "description": "Create the minigame from JSON template",
      "example": "!infected createminigame",
      "args": []
    },
    {
      "name": "!infected status",
      "description": "Show quick status",
      "example": "!infected status",
      "args": []
    },
    {
      "name": "!infected startround",
      "description": "Start a round (admin)",
      "example": "!infected startround",
      "args": []
    },
    {
      "name": "!infected endround",
      "description": "End current round (admin)",
      "example": "!infected endround",
      "args": []
    }
  ]
}